{
  "compilerOptions": {
    "sourceMap": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "jsx": "preserve",
    "target": "es2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./public/",
    "baseUrl": "./src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@common/*": ["common/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
