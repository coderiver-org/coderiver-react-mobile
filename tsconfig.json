{
  "compilerOptions": {
    "sourceMap": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "module": "es2015",
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports":true,
    "outDir": "./public/",
    "baseUrl": "./src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@util/*": ["util/*"],
    },
  },
  "include": [
    "./src/**/*"
  ]
}
